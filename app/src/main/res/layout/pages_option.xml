<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0a1d32"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/page_option_title"
            android:layout_marginTop="45dp"
            android:textColor="#bbbbbb"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_list_pages"
            android:layout_marginTop="70dp"
            android:background="#303030"
            android:textColor="#bbbbbb"
            android:textAllCaps="false"
            android:onClick="openPageForm"
            android:layout_below="@+id/page_option_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/recommended_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_recommended_pages"
            android:background="#303030"
            android:textColor="#bbbbbb"
            android:textAllCaps="false"
            android:onClick="openRecommendedPages"
            android:layout_below="@+id/page_button"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_chevron"
            android:id="@+id/goBack"
            android:onClick="goBack"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#303030"
            android:textColor="#bbbbbb" />
    </RelativeLayout>
</LinearLayout>